<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="267dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cycle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/CreateAc"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Create Account" />

            <Button
                android:id="@+id/CreateEntry"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:text="Create Entry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/GJ"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Generaljournel" />

            <Button
                android:id="@+id/Trialbalance"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:text="Trial blance" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/cycle"
        android:layout_width="286dp"
        android:layout_height="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="89dp"
        android:text="Accounting Cycle"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>